<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#87A8B6"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/banner_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="20dip"
        android:src="@drawable/fa_01" />

    <TextView
        style="@style/CourseResultText.Grey"
        android:layout_marginTop="10dip"
        android:text="你的运动情况 :" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:orientation="horizontal" >

        <TextView
            style="@style/CourseResultText.Grey"
            android:text="时长 : " />

        <TextView
            android:id="@+id/exercise_duration"
            style="@style/CourseResultText.WHITE"
            android:paddingLeft="0dip"
            android:text="5" />

        <TextView
            style="@style/CourseResultText.Grey"
            android:paddingLeft="0dip"
            android:text=" min" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:orientation="horizontal" >

        <TextView
            style="@style/CourseResultText.Grey"
            android:text="消耗卡路里 : " />

        <TextView
            android:id="@+id/calorie"
            style="@style/CourseResultText.WHITE"
            android:paddingLeft="0dip"
            android:text="91" />

        <TextView
            style="@style/CourseResultText.Grey"
            android:paddingLeft="0dip"
            android:text=" 卡路里" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:orientation="horizontal" >

        <TextView
            style="@style/CourseResultText.Grey"
            android:text="本次获得奖励积分 : " />

        <TextView
            android:id="@+id/score"
            style="@style/CourseResultText.WHITE"
            android:paddingLeft="0dip"
            android:text="20" />

        <TextView
            style="@style/CourseResultText.Grey"
            android:paddingLeft="0dip"
            android:text=" 分" />
    </LinearLayout>

    <TextView
        style="@style/CourseResultText.Grey"
        android:layout_marginTop="10dip"
        android:text="锻炼效果 : " />

    <!--
         <TextView
        android:id="@+id/result_comment"
        style="@style/CourseResultText.WHITE"
        android:layout_marginLeft="35dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/corner_green"
        android:paddingBottom="3dip"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:paddingTop="3dip"
        android:text="再努力一下"
        android:textColor="#040602" />
    -->

    <Spinner
        style="@android:attr/spinnerStyle"
        android:id="@+id/effectSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/corner_green" />

    <Button
        android:id="@+id/schedule_detail"
        style="@style/normal_blue_btn_style"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dip"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:text="详细内容" />

    <Button
        android:id="@+id/share"
        style="@style/normal_blue_btn_style"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dip"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:text="分享到朋友圈" />

</LinearLayout>