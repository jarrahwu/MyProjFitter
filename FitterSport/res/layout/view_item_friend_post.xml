<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sel_btn_white20trans"
    android:orientation="horizontal"
    android:paddingBottom="25dip"
    android:paddingLeft="17dip"
    android:paddingRight="17dip"
    android:paddingTop="25dip" >

    <com.chzh.fitter.view.RoundImageView
        android:id="@+id/portrait"
        style="@style/Portrait"
        android:layout_gravity="center_vertical" />

    <!--  -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="7dip"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="3dip"
            android:paddingTop="3dip" >

            <!-- 昵称 -->

            <TextView
                android:id="@+id/nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fitter"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#fff100" >
            </TextView>

            <!-- 活跃度 -->

            <TextView
                android:id="@+id/pre_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="活跃度"
                android:textColor="@color/WHITE"
                android:textAppearance="?android:attr/textAppearanceMedium" >
            </TextView>

            <!-- 活跃度等级 -->

            <ImageView
                android:id="@+id/activeness_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:src="@drawable/act_start" />
        </LinearLayout>

        <!-- 活动内容 -->

        <TextView
            android:id="@+id/act_content"
            style="@style/white_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="3dip"
            android:paddingTop="3dip" />

        <TextView
            android:id="@+id/post_time"
            style="@style/black_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="3dip"
            android:paddingTop="3dip" >
        </TextView>
    </LinearLayout>

</LinearLayout>